@model OrderEditVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="">Cập nhật</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="OrderId" type="hidden" />

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.OrderStatus"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group text-end mt-2">
                <a asp-action="Index" class="me-2">Quay lại</a>
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<h2 class="mt-4">Lịch sử cập nhật</h2>
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Thời gian</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.OrderStatusHistories.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@Model.OrderStatusHistories[i].UpdateTime</td>
                        <td>@OrderStatusExtensions.ToVietNamText(@Model.OrderStatusHistories[i].OrderStatus)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



