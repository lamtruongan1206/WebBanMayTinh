@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    var username = HttpContextAccessor.HttpContext?.Session?.GetString("Username")
                   ?? "Không tên";
    var userEmail = HttpContextAccessor.HttpContext?.Session?.GetString("UserEmail") ?? "Không xác định";
    var avatar = HttpContextAccessor.HttpContext?.Session?.GetString("Avatar");

    if (string.IsNullOrEmpty(avatar))
    {
        avatar = " assets/img/avatars/user_default.png";
    }
}

<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
    <div class="app-brand demo">
        <a href="index.html" class="app-brand-link">
            <span class="app-brand-text demo menu-text fw-bolder ms-2" style="text-transform:none">Trang quản trị</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
            <i class="bx bx-chevron-left bx-sm align-middle"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <!-- Dashboard -->
        <li class="menu-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
            <a asp-controller="Home" asp-action="Index" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div data-i18n="Analytics">Bảng điều khiển</div>
            </a>
        </li>

        <li class="menu-item @(currentController == "Product" || currentController == "Brand" ? "open active" : "")">
            <a class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bxl-product-hunt"></i>
                <div data-i18n="Account Settings">Quản lý sản phẩm</div>
            </a>
            <ul class="menu-sub">
                <li class="menu-item @(currentController == "Product" ? "active" : "")">
                    <a asp-controller="Product" asp-action="Index" class="menu-link">
                        <div data-i18n="Account">Danh sách sản phẩm</div>
                    </a>
                </li>
                <li class="menu-item @(currentController == "Brand" ? "active" : "")">
                    <a asp-controller="Brand" asp-action="Index" class="menu-link">
                        <div data-i18n="Notifications">Hãng sản xuất</div>
                    </a>
                </li>
            </ul>
        </li>


        @if (User.IsInRole("Admin"))
        {
            <li class="menu-item @(currentController == "User" || currentController == "Role" ? "open active" : "")">
                <a class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons bx bx-user"></i>
                    <div data-i18n="Account Settings">Quản lý người dùng</div>
                </a>
                <ul class="menu-sub">
                    <li class="menu-item @(currentController == "User" ? "active" : "")">
                        <a asp-controller="User" asp-action="Index" class="menu-link">
                            <div data-i18n="Account">Tài khoản</div>
                        </a>
                    </li>
                    <li class="menu-item @(currentController == "Role" ? "active" : "")">
                        <a asp-controller="Role" asp-action="Index" class="menu-link">
                            <div data-i18n="Notifications">Vai trò</div>
                        </a>
                    </li>
                </ul>
            </li>
        }

        <li class="menu-item @(currentController == "OrderManage" ? "active" : "")">
            <a asp-controller="OrderManage" asp-action="Index" class="menu-link">
                <i class="menu-icon tf-icons bx bx-shopping-bag"></i>
                <div data-i18n="Analytics">Quản lý đơn hàng</div>
            </a>
        </li>

        <li class="menu-item @(currentController == "Invoice" ? "active" : "")">
            <a asp-controller="Invoice" asp-action="Index" class="menu-link">
                <i class='menu-icon tf-icons bx  bx-dollar-circle'></i>
                <div data-i18n="Analytics">Quản lý thanh toán</div>
            </a>
        </li>

        <li class="menu-item @(currentController == "Sliders" ? "active" : "")">
            <a asp-controller="Sliders" asp-action="Index" class="menu-link">
                <i class='menu-icon tf-icons bx  bx-slideshow'></i>
                <div data-i18n="Analytics">Quản lý slider</div>
            </a>
        </li>


        <li class="menu-item mt-auto">
            <a href="/" class="menu-link">
                <i class='menu-icon tf-icons bx  bx-arrow-to-left'></i>
                <div data-i18n="Analytics">Thoát</div>
            </a>
        </li>


    </ul>
</aside>
<!-- / Menu -->