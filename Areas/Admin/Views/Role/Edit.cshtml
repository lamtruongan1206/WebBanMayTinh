@{
    ViewData["Title"] = "Cập nhật vai trò";
}

@model RoleUpdateVM

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý tài khoản /</span> Cập nhật vai trò</h4>


<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Role" asp-area="Admin" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <div class="input-group input-group-merge">
                    <span class="input-group-text"><i class="bx bx-text"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Admin" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Quyền</label>
                <div class="row">
                    @for (int i = 0; i < Model.Permissions.Count; i++)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input asp-for="Permissions[i].Checked" class="form-check-input" />
                                <input type="hidden" asp-for="Permissions[i].Role.Name" />
                                <label class="form-check-label">
                                    @Model.Permissions[i].Role
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="Index" asp-controller="Role" class="btn btn-link">Quay lại</a>
            </div>
        </form>
    </div>
</div>
