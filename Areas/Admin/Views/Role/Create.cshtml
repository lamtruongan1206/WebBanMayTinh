@model RoleCreateVM

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Quản lý tài khoản /</span> Tạo mới vai trò
</h4>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Tên vai trò</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <hr />

            <h6>Phân quyền</h6>

            <div class="row">
                @for (int i = 0; i < Model.Permissions.Count; i++)
                {
                    <div class="col-md-4">
                        <div class="form-check">
                            <input type="hidden"
                                   asp-for="Permissions[i].Role.Name" />

                            <input asp-for="Permissions[i].Checked"
                                   class="form-check-input" />

                            <label class="form-check-label">
                                @Model.Permissions[i].Role.Name
                            </label>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex flex-row-reverse mt-4">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-action="Index" class="btn btn-link">Quay lại</a>
            </div>
        </form>
    </div>
</div>
