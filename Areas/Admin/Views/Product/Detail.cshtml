@model Product

@{
    ViewData["Title"] = "Chi tiết máy tính";
    var relatedProducts = ViewBag.RelatedProducts as List<Product>;
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">Chi tiết máy: @Model.Name</h2>

    <div class="row">
        <!-- Ảnh chính -->
        <div class="col-md-4">
            @{
                var mainImage = Model.Images?.FirstOrDefault(i => i.IsMain)?.Url ?? "/images/default.png";
            }
            <img src="@mainImage" class="img-fluid rounded mb-3" alt="Ảnh chính" style="width:100%; height:auto; object-fit:cover;" />
        </div>

        <!-- Thông số máy tính -->
        <div class="col-md-8">
            <h5>Thông tin chi tiết</h5>
            <table class="table table-bordered">
                <tr>
                    <th>Tên máy</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Hãng sản xuất</th>
                    <td>@Model.Manufacturer</td>
                </tr>
                <tr>
                    <th>Giá</th>
                    <td>@Model.Price</td>
                </tr>
                <tr>
                    <th>Số lượng</th>
                    <td>@Model.Quantity</td>
                </tr>
                <tr>
                    <th>Danh mục</th>
                    <td>@Model.Category?.Name</td>
                </tr>
                <tr>
                    <th>Ngày tạo</th>
                    <td>@Model.CreateAt?.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Ngày cập nhật</th>
                    <td>@Model.UpdateAt?.ToString("dd/MM/yyyy")</td>
                </tr>
            </table>

            <!-- Mô tả xuống dưới bảng -->
            <div class="mt-3">
                <h5>Mô tả</h5>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

    <!-- Ảnh phụ -->
    <div class="row mt-4">
        <div class="col">
            @if (Model.Images != null && Model.Images.Any(i => !i.IsMain))
            {
                foreach (var img in Model.Images.Where(i => !i.IsMain))
                {
                    <img src="@img.Url" alt="Ảnh phụ" class="img-thumbnail me-2 mb-2" style="width:150px; height:150px; object-fit:cover;" />
                }
            }
            else
            {
                <p class="text-muted">Chưa có ảnh phụ</p>
            }
        </div>
    </div>

    <!-- Sản phẩm liên quan -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="mt-5">
            <h4>Sản phẩm liên quan</h4>
            <div class="row">
                @foreach (var p in relatedProducts)
                {
                    var imgUrl = p.Images?.FirstOrDefault(i => i.IsMain)?.Url ?? "/images/default.png";
                    <div class="col-md-3 col-6 mb-3">
                        <div class="card h-100">
                            <img src="@imgUrl" class="card-img-top" style="height:150px; object-fit:cover;" />
                            <div class="card-body p-2">
                                <h6 class="card-title mb-1" style="font-size:0.9rem;">@p.Name</h6>
                                <p class="mb-0" style="font-size:0.85rem;">@p.Price</p>
                            </div>
                            <div class="card-footer p-2">
                                <a asp-action="Detail" asp-route-id="@p.Id" class="btn btn-sm btn-primary w-100">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Cập nhật</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
    </div>
</div>
