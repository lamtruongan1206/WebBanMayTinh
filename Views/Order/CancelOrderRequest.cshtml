@model CancelRequestVM

@{
    ViewData["Title"] = "Yêu cầu hủy đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 min-vh-100">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow mt-5">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Yêu cầu hủy đơn hàng</h5>
                </div>

                <div class="card-body">
                    <form asp-action="CancelOrderRequest" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="OrderId" />

                        <div class="mb-3">
                            @* <label asp-for="CancelReason" class="form-label"></label> *@
                            <textarea asp-for="CancelReason"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Nhập lý do bạn muốn hủy đơn hàng"></textarea>
                            <span asp-validation-for="CancelReason" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            <button type="submit" class="btn btn-danger">
                                Gửi yêu cầu hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
