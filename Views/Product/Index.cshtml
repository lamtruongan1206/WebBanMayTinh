@model IEnumerable<Product>

@{
    ViewData["Title"] = "Danh sách máy tính";
}

<!-- ================= HERO SECTION ================= -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <h1><span class="d-block">Sản phẩm nổi bật</span></h1>
                <p class="mb-4">
                    Khám phá các sản phẩm máy tính chất lượng cao, từ laptop, PC đến linh kiện.
                </p>
                <p>
                    <a href="@Url.Action("Index", "Shop")" class="btn btn-secondary me-2">
                        Mua ngay
                    </a>
                    <a href="@Url.Action("Index", "Shop")" class="btn btn-white-outline">
                        Khám phá thêm
                    </a>
                </p>
            </div>
            <div class="col-lg-7">
                <img src="~/furni-1.0.0/images/shop-img.png"
                     class="img-fluid"
                     alt="Sản phẩm nổi bật" />
            </div>
        </div>
    </div>
</div>

<!-- ================= BODY ================= -->
<div class="container mt-4">
    <div class="row">

        <!-- ================= SIDEBAR ================= -->
        @await Html.PartialAsync("_SidebarPartial")

        <!-- ================= MAIN CONTENT ================= -->
        <div class="col-md-9">

            <!-- ===== SEARCH FORM ===== -->
            <form method="get" class="row g-3 mb-3">

                <input type="hidden" name="categoryId" value="@ViewBag.SelectedCategory" />
                <input type="hidden" name="brandId" value="@ViewBag.SelectedBrand" />

                <div class="col-md-3">
                    <input type="text"
                           name="searchName"
                           value="@ViewBag.SearchName"
                           class="form-control"
                           placeholder="Tên máy" />
                </div>

                <div class="col-md-3">
                    <input type="text"
                           name="searchManufacturer"
                           value="@ViewBag.SearchManufacturer"
                           class="form-control"
                           placeholder="Hãng sản xuất" />
                </div>

                <div class="col-md-2">
                    <input type="number"
                           name="priceFrom"
                           value="@ViewBag.PriceFrom"
                           class="form-control"
                           placeholder="Giá từ" />
                </div>

                <div class="col-md-2">
                    <input type="number"
                           name="priceTo"
                           value="@ViewBag.PriceTo"
                           class="form-control"
                           placeholder="Giá đến" />
                </div>

                <div class="col-md-2">
                    <button class="btn btn-primary w-100">
                        Tìm kiếm
                    </button>
                </div>
            </form>

            <!-- ===== PRODUCT LIST ===== -->
            <div class="row">
                @foreach (var item in Model)
                {
                    var mainImage =
                    item.Images?.FirstOrDefault(i => i.IsMain)?.Url
                    ?? item.Images?.FirstOrDefault()?.Url
                    ?? "~/images/default.png";

                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm border-0 d-flex flex-row h-100">

                            <!-- IMAGE -->
                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="width:220px;">
                                <img src="@Url.Content(mainImage)"
                                     alt="@item.Name"
                                     class="img-fluid p-2"
                                     style="max-height:200px; object-fit:contain;" />
                            </div>

                            <!-- INFO -->
                            <div class="card-body d-flex flex-column justify-content-between">

                                <div>
                                    <h5 class="fw-bold text-primary">@item.Name</h5>

                                    <p class="mb-1">
                                        <strong>Hãng:</strong> @item.Manufacturer
                                    </p>

                                    <p class="mb-1">
                                        <strong>Giá:</strong>
                                        @String.Format("{0:N0} ₫", item.Price)
                                    </p>

                                    <p class="mb-1">
                                        <strong>Số lượng:</strong> @item.Quantity
                                    </p>

                                    <p class="mb-1">
                                        <strong>Danh mục:</strong> @item.Category?.Name
                                    </p>
                                </div>

                                <!-- ACTION BUTTONS -->
                                <div class="btn-group mt-3 w-100">

                                    <a asp-action="Detail"
                                       asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm">
                                        Chi tiết
                                    </a>

                                    <a asp-controller="Cart"
                                       asp-action="Add"
                                       asp-route-productId="@item.Id"
                                       class="btn btn-success btn-sm">
                                        Thêm giỏ
                                    </a>

                                    <a asp-controller="Checkout"
                                       asp-action="BuyNow"
                                       asp-route-productId="@item.Id"
                                       class="btn btn-danger btn-sm">
                                        Mua ngay
                                    </a>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- ===== PAGINATION ===== -->
            <nav>
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-route-page="@i"
                               asp-route-categoryId="@ViewBag.SelectedCategory"
                               asp-route-brandId="@ViewBag.SelectedBrand">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>

        </div>
    </div>
</div>
<style>
    /* FIX BUTTON COLOR */
    .btn-info {
        background-color: #0dcaf0 !important;
        border-color: #0dcaf0 !important;
        color: #fff !important;
    }

    .btn-success {
        background-color: #198754 !important;
        border-color: #198754 !important;
        color: #fff !important;
    }

    .btn-danger {
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
        color: #fff !important;
    }

    .btn-group .btn {
        border-radius: 6px !important;
    }
</style>