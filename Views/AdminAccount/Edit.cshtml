@model WebBanMayTinh.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý tài khoản /</span> Cập nhật tài khoản</h4>

<hr />
<div class="col-xl">
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-user"></i></span>
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- First Name -->
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-user-pin"></i></span>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-user-circle"></i></span>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-phone"></i></span>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-location-plus"></i></span>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="RoleId" class="form-label"></label>
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-select"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>

                <!-- CreatedAt -->
                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label"></label>
                    <input asp-for="CreatedAt" class="form-control" readonly />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <!-- UpdateAt -->
                <div class="mb-3">
                    <label asp-for="UpdateAt" class="form-label"></label>
                    <input asp-for="UpdateAt" class="form-control" readonly />
                    <span asp-validation-for="UpdateAt" class="text-danger"></span>
                </div>

                <div class="d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>

            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

