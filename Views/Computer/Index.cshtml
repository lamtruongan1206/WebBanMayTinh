@model IEnumerable<WebBanMayTinh.Models.Entities.Computer>

@{
    ViewData["Title"] = "Danh sách máy tính";
}

<div class="container mt-4">
    <h1>Danh sách máy tính</h1>

    <!-- Nút quay lại trang ban đầu -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Quay lại trang ban đầu</a>
    </div>

    <!-- Form tìm kiếm -->
    <form method="get" class="row g-3 mb-3">
        <div class="col-md-3">
            <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Tên máy" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchManufacturer" value="@ViewBag.SearchManufacturer" class="form-control" placeholder="Hãng sản xuất" />
        </div>
        <div class="col-md-2">
            <input type="number" name="priceFrom" value="@ViewBag.PriceFrom" class="form-control" placeholder="Giá từ" min="0" />
        </div>
        <div class="col-md-2">
            <input type="number" name="priceTo" value="@ViewBag.PriceTo" class="form-control" placeholder="Giá đến" min="0" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            var mainImage = item.Images?.FirstOrDefault(i => i.IsMain)?.Url ?? item.Images?.FirstOrDefault()?.Url ?? "~/images/default.png";
            <div class="col-md-6 mb-3">
                <div class="card flex-row shadow-sm">
                    <div class="card-img-left" style="width:120px; text-align:center; padding:10px;">
                        <img src="@Url.Content(mainImage)" class="img-fluid rounded" alt="@item.Name" style="object-fit:cover; width:100%; height:100%;" />
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Hãng sản xuất:</strong> @item.Manufacturer <br />
                            <strong>Giá:</strong> @item.Price <br />
                            <strong>Số lượng:</strong> @item.Quantity <br />
                            <strong>Danh mục:</strong> @item.Categories?.Name <br />
                            <strong>Mô tả:</strong> @item.Description
                        </p>
                        <div class="btn-group" role="group">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Cập nhật</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <div class="mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if ((int)ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchManufacturer="@ViewBag.SearchManufacturer"
                           asp-route-priceFrom="@ViewBag.PriceFrom"
                           asp-route-priceTo="@ViewBag.PriceTo">
                            Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Previous</span></li>
                }

                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    if (i == (int)ViewBag.CurrentPage)
                    {
                        <li class="page-item active"><span class="page-link">@i</span></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@i"
                               asp-route-searchName="@ViewBag.SearchName"
                               asp-route-searchManufacturer="@ViewBag.SearchManufacturer"
                               asp-route-priceFrom="@ViewBag.PriceFrom"
                               asp-route-priceTo="@ViewBag.PriceTo">
                                @i
                            </a>
                        </li>
                    }
                }

                @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchManufacturer="@ViewBag.SearchManufacturer"
                           asp-route-priceFrom="@ViewBag.PriceFrom"
                           asp-route-priceTo="@ViewBag.PriceTo">
                            Next
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Next</span></li>
                }
            </ul>
        </nav>
    </div>
</div>
