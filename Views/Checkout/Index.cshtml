@{
    var cnt = 0;
}
@model CheckoutVM

<div class="container min-vh-100 p-2">
    <div class="card mb-2">
        <div class="card-body">
            <h3>Địa chỉ nhận hàng</h3>

            <div class="d-flex align-items-center justify-content-between">
                <p>
                    Trương Khánh Linh (+84) 397 594 866
                    Đối diện mầm non Tân Tiến, inphotothuybich, Xã Tân Tiến, Huyện Yên Sơn, Tuyên Quang
                </p>

                <a class="btn-link " style="cursor: pointer">Thay đổi</a>
            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div class="card-body">
            <h3>Sản phẩm</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var i in Model.Products)
                    {
                        cnt += 1;
                        <tr>
                            <th scope="row">@cnt</th>
                            <td>@i.Name</td>
                            <td>@i.Price</td>
                            <td>@i.Quantity</td>
                            <td>@(i.Price* i.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3>Phương thức thanh toán</h3>
            <hr />
            <div class="d-flex justify-content-end flex-column align-items-end">
                <div class="w-25">
                    <div class="d-flex justify-content-between">
                        <p>
                            Tổng tiền hàng
                        </p>
                        <p class="text-black">
                            @Model.TotalAmount đ
                        </p>
                    </div>
                    <div class ="d-flex justify-content-between">
                        <p>
                            Tổng tiền vận chuyển
                        </p>
                        <p class="text-black">
                            @Model.ShippingFee đ
                        </p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>
                            Thành tiền
                        </p>
                        <p class="text-danger fs-4 fw-bold">
                            @(((int)(Model.TotalAmount + Model.ShippingFee))) đ
                        </p>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-end"> 
                <a asp-controller="Cart" asp-action="Index" class="me-3 cur">Quay lại </a>
                <a class="btn btn-primary">Đặt hàng </a>
            </div>

        </div>
    </div>
</div>
