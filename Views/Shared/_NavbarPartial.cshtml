@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<ul class="custom-navbar-nav navbar-nav ms-auto mb-2 mb-md-0">
    <li class="nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
        <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
    </li>
    <li class="nav-item @(currentController == "Product" && currentAction == "Index" ? "active" : "")">
        <a class="nav-link" href="@Url.Action("Index", "Product")">Sản phẩm</a>
    </li>
</ul>