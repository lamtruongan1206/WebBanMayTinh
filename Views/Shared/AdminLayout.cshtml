@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var userName = HttpContextAccessor.HttpContext?.Session?.GetString("UserName")
                   ?? HttpContextAccessor.HttpContext?.Session?.GetString("UserEmail")
                   ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Bán Máy Tính</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
        }

            .sidebar h4 {
                text-align: center;
                padding: 20px 0;
                margin: 0;
                border-bottom: 1px solid #495057;
            }

            .sidebar .nav-link {
                color: #adb5bd;
                font-size: 1.05rem;
                padding: 12px 20px;
                border-radius: 6px;
                margin: 4px 10px;
                transition: all 0.2s;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: #fff;
                }

                .sidebar .nav-link.active {
                    background-color: #ffc107;
                    color: #212529;
                    font-weight: 600;
                }

        /* Header */
        .header {
            background-color: white;
            border-bottom: 1px solid #dee2e6;
            height: 60px;
            margin-left: 250px;
            padding: 0 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: fixed;
            width: calc(100% - 250px);
            top: 0;
            z-index: 1000;
        }

            .header .user-info {
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .header img {
                border-radius: 50%;
                width: 36px;
                height: 36px;
                object-fit: cover;
            }

        /* Main content */
        .content {
            margin-left: 250px;
            padding: 80px 30px 30px 30px;
            width: calc(100% - 250px);
        }

        .logout-btn {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <h4>Quản trị hệ thống</h4>
        <nav class="nav flex-column mt-3">
            <a class="nav-link @(currentController == "Computer" ? "active" : "")"
               asp-controller="Admin" asp-action="Index">
                💻 Quản lý máy tính
            </a>
            <a class="nav-link @(currentController == "Revenue" ? "active" : "")"
               asp-controller="Revenue" asp-action="Index">
                📈 Quản lý doanh thu
            </a>
            <a class="nav-link @(currentController == "Invoice" ? "active" : "")"
               asp-controller="Invoice" asp-action="Index">
                🧾 Quản lý hóa đơn
            </a>
            <a class="nav-link @(currentController == "User" ? "active" : "")"
               asp-controller="User" asp-action="Index">
                👤 Quản lý người dùng
            </a>
        </nav>
    </aside>

    <!-- Header -->
    <header class="header">
        <h5 class="m-0">Bảng điều khiển quản trị</h5>
        <div class="user-info">
            <span>@userName</span>
            <img src="~/assets/img/avatars/1.png" alt="User Avatar" />
            <form asp-controller="Login" asp-action="Logout" method="post" class="m-0">
                <button type="submit" class="btn btn-sm btn-outline-danger logout-btn">Đăng xuất</button>
            </form>
        </div>
    </header>

    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
