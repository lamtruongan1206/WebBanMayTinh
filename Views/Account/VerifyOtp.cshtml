@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <!-- /Logo -->
        <h4 class="mb-2">Xác thực mã OTP</h4>

        <form id="formAuthentication" class="mb-3" asp-controller="Account" asp-action="VerifyOtp" method="POST">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Mã OTP</label>
                <input type="text"
                       class="form-control"
                       name="otp"
                       placeholder="Nhập mã OTP tại đây"
                       autofocus />
            </div>

            <div class="mb-3">
                <button class="btn btn-primary d-grid w-100">Đổi mật khẩu</button>
            </div>

        </form>
    </div>
</div>

