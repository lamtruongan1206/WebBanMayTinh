@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model ChangePasswordVM

<div class="card">
    <div class="card-body">
        <!-- /Logo -->
        <h4 class="mb-2">Đổi mật khẩu</h4>
        <p class="mb-4">Vui lòng nhập lại mật khẩu cũ để đổi mật khẩu</p>

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">@TempData["error"]</div>
        }

            <form id="formAuthentication" class="mb-3" asp-controller="Account" asp-action="ChangePassword" method="POST">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Username"/>
                <div class="mb-3">
                    <label class="form-label">Mật khẩu cũ</label>
                    <input type="password"
                           class="form-control"
                           asp-for="OldPassword"
                           placeholder="Nhập mật khẩu cũ của bạn"
                           autofocus />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu mới</label>
                    <input type="password"
                           class="form-control"
                           asp-for="NewPassword"
                           placeholder="Nhập mật khẩu mới của bạn"
                           autofocus />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nhập lại mật khẩu mới</label>
                    <input type="password"
                           class="form-control"
                           asp-for="ConfirmPassword"
                           placeholder="Nhập lại mật khẩu mới của bạn" />

                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary d-grid w-100">Đổi mật khẩu</button>
                </div>

            </form>
    </div>
</div>